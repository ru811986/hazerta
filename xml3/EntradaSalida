 * @author Ma침ana
 */
class EntradaSalida {

    static int pedirOpcion() {
        Scanner sc = new Scanner(System.in);
        System.out.println("Elija una opci칩n\n"
                + "1 - Buscar una estaci칩n\n"
                + "2 - Salir");
        int opcion = Integer.parseInt(sc.nextLine());
        return opcion;
    }

    static String pedirEstacion() {
        Scanner sc = new Scanner(System.in);
        System.out.println("Introduzca una estaci칩n");
        String estacion = sc.nextLine();
        return estacion;
    }
    
}
